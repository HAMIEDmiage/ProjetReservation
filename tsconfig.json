{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "ignoreDeprecations": "5.0",

    "jsx": "react-native",
    "strict": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },

  "exclude": [
    "node_modules",
    ".expo/babel.config.cjs",
    "metro.config.js"
  ],

  "include": [
    "src",
    "../App.tsx"
  ]
}
